@model rcDominiosDataTransfers.PessoaTipoDataTransfer;

@{
    ViewData["Title"] = "";
}

<div class="areaUtilMed">
    <div class="fonteMedia"><i class="iconeMed fas fa-users"></i>&nbsp;
        <a asp-controller="PessoaTipo" asp-action="Index">Tipo de Pessoa</a> &nbsp;/&nbsp; Formulário
    </div>
    <br>
    <form asp-controller="PessoaTipo" asp-action="Incluir" asp-anti-forgery>
        <div class="form-group">
            <label asp-for="@Model.PessoaTipo.Id" class="txtCampoTitulo">Id</label>
            <input class="form-control campoPeq" type="text" asp-for="@Model.PessoaTipo.Id" disabled>
        </div>
        <div class="form-group">
            <label asp-for="@Model.PessoaTipo.Descricao" class="txtCampoTitulo">Descrição</label> &nbsp;
            <a data-container="body" data-toggle="popover" data-placement="right" data-trigger="hover"
                data-object-content="#popDescricao">
                <i class="iconePopObr fas fa-asterisk"></i>
            </a>
            <div id="popDescricao" class="popMsg">
                &bull; Campo <span class="text-danger"><b>obrigatório</b></span><br>
                &bull; Tamanho máximo: <b>100</b> caracteres<br>
                &bull; Caracteres válidos: <b>letras</b>, <b>acentos</b>, <b>números</b>, <b>traço</b> e <b>espaço em branco</b><br>
            </div>
            <input class="form-control campoMed" type="text" maxlength="100" asp-for="@Model.PessoaTipo.Descricao">
        </div>
        <div class="form-group areaUtilPeq">
            <label asp-for="@Model.PessoaTipo.Codigo" class="txtCampoTitulo">Código</label> &nbsp;
            <a data-container="body" data-toggle="popover" data-placement="right" data-trigger="hover"
                data-object-content="#popCodigo">
                <i class="iconePopOpc fas fa-question"></i>
            </a>
            <div id="popCodigo" class="popMsg">
                &bull; Campo <span class="corOpcional"><b>opcional</b></span><br>
                &bull; Tamanho máximo: <b>10</b> caracteres<br>
                &bull; Caracteres válidos: <b>letras</b>, <b>números</b> e <b>traço</b><br>
            </div>
            <input class="form-control campoPeq d-inline" type="text" maxlength="10" asp-for="@Model.PessoaTipo.Codigo">
        </div>
        <br>
        <div>
            <div class="float-left">
                <button class="btn btn-danger btn-lg" asp-controller="PessoaTipo" asp-action="Inclusao"><i class="fas fa-save"></i> 
                    &nbsp;Incluir</button>
                <button class="btn btn-warning btn-lg" asp-controller="PessoaTipo" asp-action="Index"><i class="fas fa-arrow-circle-left"></i> 
                    &nbsp;Voltar</button>
            </div>
            <div class="float-right">
                @if (@Model != null) {
                    @if (@Model.Erro || !@Model.Validacao) {
                        <a href="javascript:VerMensagens();"><i class="iconeMsg fas fa-exclamation-circle"></i></a>
                    }
                }
            </div>
        </div>
    </form>
</div>

@if (@Model != null) {
    @if (@Model.Erro || !@Model.Validacao) {
        <div class="text-danger">
            @section Scripts {
                <script>
                    $('#modalMessages').modal('show');
                </script>
            }

            @if (@Model.Erro) {
                @section Messages {
                    <ul>
                        @foreach (var msg in @Model.ErroMensagens) {
                            <li class="p-2">@msg</li>
                        }
                    </ul>
                }
            } else if (!@Model.Validacao) {
                @section Messages {
                    <ul>
                        @foreach (var msg in @Model.ValidacaoMensagens) {
                            <li class="p-2">@msg</li>
                        }
                    </ul>
                }
            }
        </div>
    }
}
