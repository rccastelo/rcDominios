@model rcDominiosDataTransfers.PessoaTipoDataTransfer;

@{
    ViewData["Title"] = "";
}

<div class="areaUtilGrd">
    <div class="fonteMedia"><i class="iconeMed fas fa-users"></i>&nbsp;
        <a asp-controller="PessoaTipo" asp-action="Index">Tipo de Pessoa</a> &nbsp;/&nbsp; Lista
    </div>
    <br>
    <table class="table border-bottom">
        <thead class="txtCampoTitulo">
            <th>Id</th>
            <th>Descrição</th>
            <th>Código</th>
            <th>Ativo</th>
            <th></th>
            <th></th>
        </thead>
        <tbody class="txtPadrao align-text-bottom">
            @if (@Model.PessoaTipoLista != null) {
                @foreach (var item in @Model.PessoaTipoLista) {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Descricao</td>
                        <td>@item.Codigo</td>
                        <td>@item.Ativo</td>
                        <td><a class="btn btn-warning" href="/PessoaTipo/Form/@item.Id"><i class="fas fa-pen"></i> 
                    &nbsp;Alterar</a></td>
                        <td><a class="btn btn-danger" href="/PessoaTipo/Exclusao/@item.Id"><i class="fas fa-trash"></i> 
                    &nbsp;Excluir</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div>
        <a href="/PessoaTipo"><button class="btn btn-warning btn-lg"><i class="fas fa-arrow-circle-left"></i> 
                    &nbsp;Voltar</button></a>
    </div>
</div>
